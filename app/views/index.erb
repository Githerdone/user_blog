
<ul class="nav">
  <li><a href="/">Home</a></li>
  <% if current_user %>
  <li><a href="/logout">logout</a></li>
  <% else %>
  <li><a href="/login">login</a></li>
  <li><a href="/create_account">create account</a></li>
  <%end%>
</ul>

<div class="container">
  <h1>Welcome to Bloggerton Blog</h1>
  <% if current_user %>
  <p>You are now logged in as: <span><%= user %></span></p>
  <form name='create_post' method='post' action='/create_post'>
    <button>Submit</button><br>
    <input type='hidden' name='id' value='<%= current_user %>'>
    <input type='text' name='title' placeholder='Title'><br>
    <input type='text' name='tags' placeholder='Tag It!'><br>
    <textarea name='body' cols='60' rows='5'></textarea>
  </form>
  <%end%>
  <p>Here are the latest posts</p>
  <% if @posts %>
    
      <% @posts.each do |post| %>
        <div id='posts'>
          <p><span id='post_text'>Title: </span><%= post.title %></p>
          <p><span id='post_text'>Post: </span><%= post.body %></p>
        </div><br>
      <%end%>
  <%end%>
</div>
